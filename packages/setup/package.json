{
  "name": "@sage-cli/plugin-setup",
  "description": "Performs post-installation operations for Sage.",
  "version": "1.0.0",
  "author": "QWp6t",
  "bugs": "https://github.com/roots/sage-cli/issues",
  "dependencies": {
    "@sage-cli/cli-utils": "^1",
    "slugify": "^1.3.4"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://roots.io/sage/cli",
  "keywords": [
    "sage",
    "sage-cli"
  ],
  "license": "MIT",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sage",
    "devPlugins": [
      "@oclif/plugin-help"
    ],
    "topics": {
      "setup": {
        "description": "Sets theme headers and other metadata."
      }
    },
    "repositoryPrefix": "<%- repo %>/blob/v<%- version %>/packages/setup/<%- commandPath %>"
  },
  "repository": "roots/sage-cli",
  "scripts": {
    "clean": "rimraf oclif.manifest.json lib tsconfig.tsbuildinfo *-error.log",
    "prebuild": "yarn clean",
    "build": "tsc -b",
    "postbuild": "oclif-dev manifest && oclif-dev readme",
    "lint": "tsc -p test --noEmit && tslint -p test -t stylish",
    "postpublish": "rimraf oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build",
    "preversion": "yarn postpublish",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md"
  },
  "types": "lib/index.d.ts",
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@oclif/tslint": "^3",
    "rimraf": "^2",
    "ts-node": "^8",
    "typescript": "^3"
  }
}
