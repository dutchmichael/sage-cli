{
  "version": "1.0.0-alpha.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "create": {
      "homepage": "https://roots.io/sage/cli",
      "license": "MIT"
    },
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true
    },
    "bootstrap": {
      "npmClientArgs": [
        "--production",
        "--no-optional"
      ]
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ],
  "packages": [
    "packages/*"
  ]
}
